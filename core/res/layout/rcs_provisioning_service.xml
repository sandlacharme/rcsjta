<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/save_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/label_save" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_photo_icon_size" />

            <EditText
                android:id="@+id/MaxPhotoIconSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_length_of_the_freetext" />

            <EditText
                android:id="@+id/MaxFreetextLength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_number_of_participants_in_a_group_chat" />

            <EditText
                android:id="@+id/MaxChatParticipants"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_length_of_a_chat_message" />

            <EditText
                android:id="@+id/MaxChatMessageLength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_length_of_a_group_chat_message" />

            <EditText
                android:id="@+id/MaxGroupChatMessageLength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Idle_duration_of_a_chat_session_milliseconds" />

            <EditText
                android:id="@+id/ChatIdleDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_size_of_a_file_transfer" />

            <EditText
                android:id="@+id/MaxFileTransferSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Threshold_warning_on_file_transfer_size" />

            <EditText
                android:id="@+id/WarnFileTransferSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_size_of_an_image_share" />

            <EditText
                android:id="@+id/MaxImageShareSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_duration_of_a_video_share_milliseconds" />

            <EditText
                android:id="@+id/MaxVideoShareDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_duration_of_audio_message_milliseconds"/>

            <EditText
                android:id="@+id/MaxAudioMessageDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"

                android:text="@string/Max_number_of_simultaneous_chat_sessions" />

            <EditText
                android:id="@+id/MaxChatSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_number_of_simultaneous_file_transfer_sessions" />

            <EditText
                android:id="@+id/MaxFileTransferSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_number_of_concurrent_outgoing_file_transfer_sessions" />

            <EditText
                android:id="@+id/MaxConcurrentOutgoingFileTransferSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_number_of_simultaneous_IP_call_sessions" />

            <EditText
                android:id="@+id/MaxIpCallSessions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/IM_session_start_mode" />

            <Spinner
                android:id="@+id/ImSessionStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:drawSelectorOnTop="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_entries_per_contact_for_chat_history" />

            <EditText
                android:id="@+id/MaxChatLogEntries"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="numberSigned"
                android:lines="1"
                android:maxLength="4" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_entries_per_contact_for_richcall_history" />

            <EditText
                android:id="@+id/MaxRichcallLogEntries"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="numberSigned"
                android:lines="1"
                android:maxLength="4" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_entries_per_contact_for_IP_call_history" />

            <EditText
                android:id="@+id/MaxIpcallLogEntries"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="numberSigned"
                android:lines="1"
                android:maxLength="4" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Max_length_of_a_geolocation_label" />

            <EditText
                android:id="@+id/MaxGeolocLabelLength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Expiration_time_of_a_geolocation_milliseconds" />

            <EditText
                android:id="@+id/GeolocExpirationTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Idle_duration_of_a_callcomposer_session_milliseconds" />

            <EditText
                android:id="@+id/CallComposerIdleDuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Directory_path_to_store_photos" />

            <EditText
                android:id="@+id/DirectoryPathPhotos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="textUri" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Directory_path_to_store_videos" />

            <EditText
                android:id="@+id/DirectoryPathVideos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="textUri" />

            <EditText
                android:id="@+id/DirectoryPathAudios"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="textUri" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Directory_path_to_store_files" />

            <EditText
                android:id="@+id/DirectoryPathFileIcons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="textUri" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:text="@string/Directory_path_to_store_fileicons" />

            <EditText
                android:id="@+id/DirectoryPathFiles"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:inputType="textUri" />

            <CheckBox
                android:id="@+id/SmsFallbackService"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/SMS_fallback_service" />

            <CheckBox
                android:id="@+id/StoreForwardServiceWarning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Store_and_Forward_service_warning" />

            <CheckBox
                android:id="@+id/AutoAcceptFileTransfer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Auto_accept_file_transfer" />
            
            <CheckBox
                android:id="@+id/AutoAcceptFileTransferInRoaming"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Auto_accept_file_transfer_in_roaming" />
            
            <CheckBox
                android:id="@+id/AutoAcceptFileTransferChangeable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Auto_accept_file_transfer_changeable" />

            <CheckBox
                android:id="@+id/AutoAcceptChat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Auto_accept_chat_invitation" />

            <CheckBox
                android:id="@+id/AutoAcceptGroupChat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/Auto_accept_group_chat_invitation" />

            <CheckBox
                android:id="@+id/EnrichCalling"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="@string/EnrichCalling_support" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>